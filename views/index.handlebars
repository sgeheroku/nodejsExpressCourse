<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/pets" method="POST" class="mb-4">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control">
  </div>
  <input type="submit" value="Add Pet" class="btn btn-primary btn-block">
</form>
<h4>Domestic Pets List</h4>
<ul class="list-group">
  {{#each pets}}
  <li class="list-group-item">{{this.name}}</li>
  {{/each}}
</ul>

<a href="/api/pets" class="btn btn-light mt-4">Visit API</a>